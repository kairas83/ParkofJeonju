<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:id="@+id/imgbtn"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="공원이름"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/imgbtn"
        />

    <ImageView
        android:id="@+id/ic_shortcut_bench"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/title"
        android:src="@drawable/ic_shortcut_bench"
        android:layout_toRightOf="@id/title"/>

    <ImageView
        android:id="@+id/ic_shortcut_camera"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/title"
        android:layout_toRightOf="@id/ic_shortcut_bench"
        android:src="@drawable/ic_shortcut_camera"/>

    <ImageView
        android:id="@+id/ic_shortcut_parking"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/title"
        android:layout_toRightOf="@id/ic_shortcut_camera"
        android:src="@drawable/ic_shortcut_parking"/>

    <ImageView
        android:id="@+id/ic_shortcut_playground"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/title"
        android:layout_toRightOf="@id/ic_shortcut_parking"
        android:src="@drawable/ic_shortcut_playground"/>

    <ImageView
        android:id="@+id/ic_shortcut_pulling_up_training_silhouette"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/title"
        android:layout_toRightOf="@id/ic_shortcut_playground"
        android:src="@drawable/ic_shortcut_pulling_up_training_silhouette"/>

    <ImageView
        android:id="@+id/ic_shortcut_roundabout"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/title"
        android:layout_toRightOf="@id/ic_shortcut_pulling_up_training_silhouette"
        android:src="@drawable/ic_shortcut_roundabout"/>

    <ImageView
        android:id="@+id/ic_shortcut_toilet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/title"
        android:layout_toRightOf="@id/ic_shortcut_roundabout"
        android:src="@drawable/ic_shortcut_toilet"/>

</RelativeLayout>